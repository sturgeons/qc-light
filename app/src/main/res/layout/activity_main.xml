<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="串口测试程序"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/btnOpenCommandSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开命令发送页面"
        android:textSize="14sp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/btnOpenSwitchControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开开关控制页面"
        android:textSize="14sp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <!-- RS485部分 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RS485 (/dev/ttyS2)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:paddingTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="波特率: "
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/spinnerRS485BaudRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnOpenRS485"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开"
            android:textSize="12sp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnCloseRS485"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginStart="4dp"/>

        <Button
            android:id="@+id/btnClearRS485"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvRS485Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态: 未连接"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:paddingBottom="4dp"/>

    <ScrollView
        android:id="@+id/scrollViewRS485"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvRS485Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:textIsSelectable="true"/>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- UART部分 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UART (/dev/ttyUSB0)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:paddingTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="波特率: "
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/spinnerUartBaudRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnOpenUart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开"
            android:textSize="12sp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnCloseUart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginStart="4dp"/>

        <Button
            android:id="@+id/btnClearUart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvUartStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态: 未连接"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:paddingBottom="4dp"/>

    <ScrollView
        android:id="@+id/scrollViewUart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvUartData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:textIsSelectable="true"/>
    </ScrollView>

</LinearLayout>
